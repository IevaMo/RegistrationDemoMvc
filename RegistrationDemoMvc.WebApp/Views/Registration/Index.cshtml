@model RegistrationModel

<h2>Registration</h2>

@if (Model?.Name != null)
{
    <h4>Registered as @Model.Name</h4>
}

<form asp-controller="Registration" asp-action="Post" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <label asp-for="@Model.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>

    @if (Model?.Age != null)
    {
        <h4>Registered as @Model.Age</h4>
    }

    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <label asp-for="@Model.Age"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Age" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
        </div>
    </div>

    @if (Model?.Email != null)
    {
        <h4>Registered as @Model.Email</h4>
    }

    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Email" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success from-control">Register</button>
</form>